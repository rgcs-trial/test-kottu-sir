# Restaurant SaaS Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Environment
NODE_ENV=production
ENVIRONMENT=production

# Application URLs
NEXT_PUBLIC_APP_URL=https://restaurantsaas.com
NEXT_PUBLIC_API_URL=https://api.restaurantsaas.com
NEXT_PUBLIC_CDN_URL=https://cdn.restaurantsaas.com

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-publishable-key
STRIPE_SECRET_KEY=sk_live_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_CONNECT_CLIENT_ID=ca_your-connect-client-id

# Authentication
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret-key
ENCRYPTION_KEY=your-encryption-key

# Email Configuration (if using external service)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@restaurantsaas.com

# Analytics & Monitoring
ANALYTICS_ID=your-analytics-id
SENTRY_DSN=your-sentry-dsn
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
ENABLE_REAL_TIME_ORDERS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_BETA_FEATURES=false
ENABLE_MAINTENANCE_MODE=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/avif
ALLOWED_DOCUMENT_TYPES=application/pdf,text/plain

# Cache Configuration
CACHE_TTL_SECONDS=3600
STATIC_CACHE_TTL_SECONDS=31536000
API_CACHE_TTL_SECONDS=300

# Security Configuration
CORS_ORIGIN=https://restaurantsaas.com,https://*.restaurantsaas.com
ALLOWED_HOSTS=restaurantsaas.com,*.restaurantsaas.com
CSP_REPORT_URI=https://your-csp-report-endpoint.com/report

# Database Configuration (if using additional databases)
# DATABASE_URL=postgresql://user:password@host:port/database
# REDIS_URL=redis://user:password@host:port

# Third-party Integrations
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# FACEBOOK_APP_ID=your-facebook-app-id
# TWITTER_API_KEY=your-twitter-api-key

# Cloudflare Specific (these are typically set in wrangler.toml)
# CLOUDFLARE_ACCOUNT_ID=your-account-id
# CLOUDFLARE_API_TOKEN=your-api-token
# CLOUDFLARE_ZONE_ID=your-zone-id

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Compliance and Legal
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=2555

# Performance Monitoring
APM_SERVICE_NAME=restaurant-saas-production
APM_SERVICE_VERSION=1.0.0
APM_ENVIRONMENT=production

# Business Configuration
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=America/New_York
DEFAULT_LANGUAGE=en
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD
SUPPORTED_LANGUAGES=en,es,fr

# Payment Configuration
PAYMENT_PROCESSING_FEE_PERCENTAGE=2.9
PAYMENT_PROCESSING_FEE_FIXED=0.30
MINIMUM_ORDER_AMOUNT=5.00
MAXIMUM_ORDER_AMOUNT=1000.00

# Notification Configuration
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Social Media
FACEBOOK_PAGE_URL=https://facebook.com/restaurantsaas
TWITTER_HANDLE=@restaurantsaas
INSTAGRAM_HANDLE=@restaurantsaas
LINKEDIN_PAGE_URL=https://linkedin.com/company/restaurantsaas

# Support and Documentation
SUPPORT_EMAIL=support@restaurantsaas.com
DOCUMENTATION_URL=https://docs.restaurantsaas.com
STATUS_PAGE_URL=https://status.restaurantsaas.com

# Development Tools (disabled in production)
DEBUG=false
ENABLE_SOURCE_MAPS=false
ENABLE_REDUX_DEVTOOLS=false
ENABLE_REACT_DEVTOOLS=false